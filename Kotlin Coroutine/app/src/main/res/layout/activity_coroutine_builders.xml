<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoroutineBuildersActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BTN1CoroutineLaunchFunction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Here To Execute \n Coroutine With\n Coroutine Builder\nLAunch Function "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BTN2CoroutineAcyncFunction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Here To Execute \n Coroutine With\n Acync Function"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/BTN1CoroutineLaunchFunction"
        app:layout_constraintStart_toStartOf="@+id/BTN1CoroutineLaunchFunction"
        app:layout_constraintTop_toBottomOf="@+id/BTN1CoroutineLaunchFunction" />

    <Button
        android:id="@+id/BTN3PrintFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print Followers"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/BTN1CoroutineLaunchFunction"
        app:layout_constraintEnd_toEndOf="@+id/BTN1CoroutineLaunchFunction"
        app:layout_constraintStart_toStartOf="@+id/BTN1CoroutineLaunchFunction"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>