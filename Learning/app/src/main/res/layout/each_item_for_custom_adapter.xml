<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    tools:context=".ListViewCustomAdapter">

    <!--   Iss image view ka use image ko circle me show krne ke liye kiye hai iska
           dependencies use kiye hai //-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image1"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/pic5"
        android:layout_margin="5dp"
        />
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tVName1"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Saumya Singh" />


        <TextView
            android:id="@+id/tVLastMessage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="5dp"
            android:text="Hey yeah I am good"
            android:textSize="12dp"
            tools:ignore="TextSizeCheck" />


    </LinearLayout>

    <TextView
        android:id="@+id/tVLastMsgTime1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:layout_marginTop="8dp"
        android:text="4:45 PM" />


</LinearLayout>